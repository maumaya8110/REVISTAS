@using System.Data


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body>


    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index","Home")" class="navbar-brand">Revista Vehicular</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    
                    @if (Session["UsuarioAccesos"] != null)
                    {
                        @ControlVehicularF4.Functions.FunctionsGeneral.ShowMenuSimple((DataTable)Session["UsuarioAccesos"])
                    }

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Login","Account")">Cerrar Sesión</a></li>
                </ul>

            </div>
        </div>
    </div>

    <div id="body" class="container body-content">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        <hr />
        <footer style="text-align:center;">
            <img src="~/Content/Images/copasa_logo.png" height="50" width="75" />
            <p>&copy; @DateTime.Now.Year - Copasa</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/jquery.flexnav.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
            @*@if (Session["Usuario_ID"] == null) {
                Response.Redirect(@Url.Action("Login", "Home"));
            }*@
            $(document).ready(function () {
                $(".flexnav").flexNav({ 'animationSpeed': 'fast' });
            });
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>


