                } else {
                    if (columnsName[ii] == "RequiereParo") {
                        textRow = "<td>" + (jsonData[i][columnsName[ii]] == '1' ? 'SI' : 'NO') + "</td>";
                    } else {
                        textRow = "<td>" + jsonData[i][columnsName[ii]] + "</td>";
                    }

                }
                row.append($(textRow));
            }
            row.appendTo(tbl);
        }
    }

