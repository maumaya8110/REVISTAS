    @*<div class="container">*@
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">

                <div id="contentdiv" class="contcustom" style="box-shadow:0 20px 25px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19) !important; border-radius: 15px 50px 30px">
